<!DOCTYPE html>
<html lang="en">
<head>
  <title>Bootstrap Example</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
  <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
</head>
<body>

<div class="row">
            <div class="col-lg-12"> 
<div class="bs-component">
                    <ul class="nav nav-tabs responsive">
                        <li class="active">
                            <a data-toggle="tab" href="#tab1">Completed Challenges</a>
                        </li>
                        <li>    
                            <a data-toggle="tab" href="#tab2">Pending Challenges</a>
                        </li>
                     </ul>

<div class="tab-content">
    <div id="tab1" class="tab-pane fade active in">
        <table class="table table-striped table-bordered table-hover footable toggle-medium">
            <thead>
                 <th>DP1</th>
                 <th data-hide="all">Name1</th>
                 <th data-hide="all">Score1</th>
                 <th data-hide="all">Score2</th>
                 <th data-hide="all">Name2</th>
                 <th>DP2</th>
             </thead>
             <tbody>
            <% if(challenge_list){ %>
            <% for(var i=0; i<challenge_list.length; i++) {%>
              <tr><td><img src=<%= challenge_list[i].fb_pic_url1 %>></td><td><%= challenge_list[i].fb_name1 %></td><td><%= challenge_list[i].score1 %></td></tr>
            <% } %>
            <% } %>    
             </tbody>
         </table>
     </div>
     <div id="tab2" class="tab-pane fade active">
        <table class="table table-striped table-bordered table-hover footable toggle-medium">
            <thead>
                 <th>DP</th>
                 <th data-hide="all">Name</th>
                 <th data-hide="all">Score</th>
             </thead>
             <tbody>
               <% if(challenge_list){ %>
            <% for(var i=0; i<challenge_list.length; i++) {%>
              <tr><td><img src=<%= challenge_list[i].fb_pic_url1 %>></td><td><%= challenge_list[i].fb_name1 %></td><td><%= challenge_list[i].six_distance %></td></tr>
            <% } %>
            <% } %> 
             </tbody>
         </table>
     </div>
   </div>
</div>
</div>
</div>

</body>
</html>
